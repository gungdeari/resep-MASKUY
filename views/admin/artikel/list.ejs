<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <link rel="icon" type="image/png" href="/assets/logo-m.png">
    <link rel="stylesheet" type="text/css" href="/admin/css/style.css" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body>
    
    <div class="container-wrapper">
        <!-- top-bar -->
        <nav class="navbar">
            <a href="/admin/dashboard" class="logo-style"><div class="logo">MAS<span>KUY</span></div></a>
            <form action="#" method="GET">
                <input type="text" placeholder="Search..." class="search-input" />
                <button type="submit" class="search-button">
                <i class="fas fa-search"></i>
                </button>
            </form>
        </nav>
    </div>

    <div class="container-content">
        <div class="sidebar">
            <ul class="nav-list">
                <li>
                    <a href="/admin/resep/list">
                        Resep
                    </a>
                </li>
                <li>
                    <a href="/admin/artikel/list">
                        Artikel
                    </a>
                </li>
            </ul>
        </div>

        <div class="main-content">

            <div class="container-fluid">
                <!-- Page Heading -->
                <div class="d-sm-flex align-items-center justify-content-between mb-4 mt-5 ml-4 mr-4">
                    <h1 class="h3 mb-0 text-gray-800">Artikel Masakan</h1>
                    <a href="/admin/artikel/create" class="d-none d-sm-inline-block btn btn-sm btn-danger shadow-sm">
                        <i class="fas fa-plus fa-sm text-white-50"></i> Tambahkan Artikel
                    </a>
                </div>


                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th> ID </th>
                                    <th> Judul </th>
                                    <th> Gambar </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% artikel.forEach(function(a) { %>
                                    <tr>
                                        <td><%= a.id %></td>
                                        <td><%= a.judul %></td>
                                        <td><img
                                            src="/uploads/<%= a.gambar  %>"
                                            alt=""
                                            width="150px"
                                        />
                                        </td>
                                        <td style="text-align: center">
                                            <a href="/admin/artikel/edit/<%= a.id %>" class="btn btn-primary">
                                                <i class="fas fa-pencil-alt"></i>
                                            </a> 
                                            <a href="/admin/artikel/detail/<%= a.id %>" class="btn btn-info">
                                                <i class="fas fa-info-circle"></i>
                                            </a>                                         
                                            <form action="/admin/artikel/delete/<%= a.id %>" method="POST" class="d-inline">
                                                <input type="hidden" name="_method" value="DELETE">
                                                <button class="btn btn-danger">
                                                  <i class="fa fa-trash-alt"></i>
                                                </button>
                                            </form>                                                                         
                                        </td>
                                    </tr>
                                <% }); %>
                                <% if (artikel.length === 0) { %>
                                    <tr>
                                        <td colspan="8" class="text-center">
                                            Data Kosong
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>  
        </div>

    </div>

</body>